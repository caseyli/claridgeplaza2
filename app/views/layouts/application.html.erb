<!DOCTYPE html>
<html>
<head>
  <title>Claridgeplaza2</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="header">
		<div class="container">
			<%= render 'layouts/header' %>
		</div>
	</div>
	<div class="main-body">
		<div class="container">
			<% flash.each do |key, value| %>
				<div class="flash <%= key %>"><%= value %></div>
			<% end %>
			<%= yield %>
		</div>
	</div>
</body>
</html>
